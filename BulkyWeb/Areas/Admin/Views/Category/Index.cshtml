<h2 class="mb-4">Category List</h2>
<div class="mb-4"><a class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-action="Create"><i class="bi bi-file-plus"></i> Create  Category</a></div>
<table class="table table-bordered table-striped">
    <thead>
    <tr><th>Category Name</th><th>Display Order</th><th>Actions</th></tr>
    </thead>
    
    <tbody>
    
    @foreach (var obj in Model)
    {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-primary mx-4">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger mx-4">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </td>
        </tr>

    }
    </tbody>
</table>