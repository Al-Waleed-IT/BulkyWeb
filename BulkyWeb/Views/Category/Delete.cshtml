@using BulkyWeb.Data
@model BulkyWeb.Data.Category

@{
    ViewBag.Title = "Delete Category";
    Layout = "_Layout";
}




<form method="post" asp-action="Delete" autocomplete="off">
    <div class="border p-3 mt-4">
        <div class="row pb-2 mb-4">
            <h2>Delete Category</h2>
            <hr />
        </div>
        
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input readonly="readonly" asp-for="Name"  class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" readonly="readonly" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        
        <div class="row">
            <div class="col-md-6"><button type="submit" class="btn btn-danger form-control" style="width: 250px;">Confirm Delete</button></div>
            <div class="col-md-6"><a class="btn btn-link form-control" asp-controller="Category" asp-action="Index">Back to List</a></div>
        </div>
        
        
        
    </div>
</form>